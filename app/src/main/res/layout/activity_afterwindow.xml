<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_activities"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Afterwindow">

    <TextView
        android:id="@+id/done"
        android:layout_width="@dimen/_210sdp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_23sdp"
        android:textColor="@color/blue"
        android:layout_marginTop="@dimen/_220sdp"
        android:layout_marginLeft="@dimen/_40sdp"/>
    <ImageView
        android:id="@+id/done_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_230sdp"
        android:layout_marginLeft="@dimen/_230sdp"
        android:visibility="invisible"
        android:src="@drawable/ic_baseline_done_24"/>
    <Button
        android:visibility="invisible"
        android:id="@+id/go_home"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_255sdp"
        android:layout_width="@dimen/_200sdp"
        android:fontFamily="@font/roboto_medium"
        android:textSize="@dimen/_25sdp"
        android:textColor="@color/white"
        android:layout_height="@dimen/_45sdp"
        android:backgroundTint="@color/background"
        android:background="@drawable/afterwindowbtnboost"
        android:text="HOME"/>

<TextView
    android:id="@+id/check"
    android:fontFamily="@font/roboto_medium"
    android:textSize="@dimen/_23sdp"
    android:textColor="@color/blue"
    android:layout_marginTop="@dimen/_110sdp"
    android:layout_marginLeft="@dimen/_130sdp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    />
    <RelativeLayout
        android:layout_width="@dimen/_400sdp"
        android:layout_height="@dimen/_340sdp"
        android:layout_marginLeft="-60dp"
        android:layout_marginTop="-320dp"
        android:background="@drawable/shape"
        android:rotation="-15" />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ad_view"
        android:layout_height="@dimen/_50sdp"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_50sdp"
        ads:adSize="SMART_BANNER"
        ads:adUnitId="ca-app-pub-3940256099942544/6300978111">
    </com.google.android.gms.ads.AdView>
